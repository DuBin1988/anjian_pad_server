							</StackPanel>
						</toolkit:DockPanel>
				</StackPanel>
				<sdk:DataGrid  AutoGenerateColumns="False" x:Name="kbgaslist" ItemsSource="{m:Exp Str=kbsellgas}" Margin="0" toolkit:DockPanel.Dock="Bottom" IsReadOnly="True">
